{% extends 'base.html.twig' %}

{% block title %}Joke index{% endblock %}

{% block body %}

<section id="home">
    <a href="{{ path('joke_new') }}"><button id="create-button">Je veux creer une citation pas trop longue ........</button></a>
    <h1 id="home-title">SEI</h1>
        {% for joke in jokes %}
        <div id="quotes">
            <ul>
                <li>
                    {{ joke.quote }}
                    <div class="bottom">
                        <h4 class="like">{{ joke.funny }} </h4>
                        <h4 class="dislike">{{ joke.lousy }}</h4>
                        <h3 class="author">{{ joke.category.name }}</h3>
                    </div>
                    <div class="bottom">
                        <a href="{{ path('joke_incrementsFunny', {'id': joke.id}) }}"><button>Dr√¥le</button></a>
                        <a href="{{ path('joke_incrementsLousy', {'id': joke.id}) }}"><button>Nulle</button></a>
                        <h3 class="author">{{ joke.firstname }} {{ joke.lastname }}</h3>
                    </div>
                </li>
            </ul>
        </div>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}

</section>


{% endblock %}
