{% extends 'base.html.twig' %}

{% block title %}Joke index{% endblock %}

{% block body %}
    <h1>Joke index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Quote</th>
                <th>Funny</th>
                <th>Lousy</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joke in jokes %}
            <tr>
                <td>{{ joke.id }}</td>
                <td>{{ joke.firstname }}</td>
                <td>{{ joke.lastname }}</td>
                <td>{{ joke.quote }}</td>
                <td>{{ joke.funny }}</td>
                <td>{{ joke.lousy }}</td>
                <td>{{ joke.image }}</td>
                <td>
                    <a href="{{ path('joke_show', {'id': joke.id}) }}">show</a>
                    <a href="{{ path('joke_edit', {'id': joke.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('joke_new') }}">Create new</a>
{% endblock %}
